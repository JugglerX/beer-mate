<div class="container">
<h2>My Beers</h2>
<table class="my-beers">
  <thead>
    <tr>
      <th>Beer Name</th>
      <th>ABV</th>
      <th>IBU</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @beers.each do |beer| %>
    <tr>
      <td><%= beer.title %></td>
      <td><%= beer.abv %>%</td>
      <td><%= beer.ibu %></td>
      <td><a href="/users/<%= current_user.id %>/beers/<%= beer.id %>/edit">edit</a></td>
    </tr>
  <% end %>
</tbody>
</table>



</div>

